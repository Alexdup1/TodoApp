<p id="notice"><%= notice %></p>

<h1>To do list</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= link_to todo.title, todo_path(todo.id), class: "btn btn-light" %></td>
        <td><%=  %></td>
        <td><%= link_to 'Modifier', edit_todo_path(todo), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Supprimer', todo, method: :delete, data: { confirm: 'Etes-vous sûr de vouloir supprimer cette tâche ?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="container text-center">
<%= link_to 'Nouvelle tâche', new_todo_path, class: "btn btn-success" %>
</div>


